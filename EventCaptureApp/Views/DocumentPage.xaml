<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		xmlns:controls="clr-namespace:EventCaptureApp.Controls;assembly=EventCaptureApp"
		xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
     	prism:ViewModelLocator.AutowireViewModel="True"
		x:Class="EventCaptureApp.Views.DocumentPage"
		Title="{Binding Document.Title}">
	<ContentPage.Content>
		<Grid RowSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="1*"/>
				<RowDefinition Height="9*"/>
			</Grid.RowDefinitions>
			<StackLayout Grid.Row="0" Orientation="Horizontal" HorizontalOptions="Fill" VerticalOptions="CenterAndExpand" Padding="50,0,50,0">
				<Label x:Name="Select"/>
				<Switch IsToggled="{Binding Document.IsSelected}"/>
			</StackLayout>
			<StackLayout Grid.Row="1" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
				<Label Text="{Binding Document.FileName}"/>
			</StackLayout>
		</Grid>
	</ContentPage.Content>
</ContentPage>
