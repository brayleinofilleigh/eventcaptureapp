<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Update Campaign" xmlns="http://xamarin.com/schemas/2014/forms"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		xmlns:controls="clr-namespace:EventCaptureApp.Controls;assembly=EventCaptureApp"
		xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
     	prism:ViewModelLocator.AutowireViewModel="True"
		x:Class="EventCaptureApp.Views.UpdatePage">
	<ContentPage.Content>
		<StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Spacing="20">
			<Label Text="{Binding Campaign.Name}"/>
			<Label Text="{Binding Status}"/>
			<Label Text="{Binding PercentDownloaded, StringFormat='Downloaded: {0}%'}"/>
			<StackLayout Orientation="Horizontal" Spacing="20">
				<controls:StandardButton Text="Cancel" WidthRequest="100"/>
				<controls:StandardButton Text="Update" WidthRequest="100" Command="{Binding UpdateCommand}"/>
			</StackLayout>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
